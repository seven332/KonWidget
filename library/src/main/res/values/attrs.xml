<resources>

    <declare-styleable name="AdvImageView">
        <attr name="kon_src" format="reference"/>
        <attr name="kon_baselineAlignBottom" format="boolean"/>
        <attr name="kon_baseline" format="dimension"/>
        <attr name="kon_aspectRatio" format="float"/>
        <attr name="kon_maxWidth" format="dimension"/>
        <attr name="kon_maxHeight" format="dimension"/>
        <attr name="kon_scaleType">
            <enum name="matrix" value="0"/>
            <enum name="fitXY" value="1"/>
            <enum name="fitStart" value="2"/>
            <enum name="fitCenter" value="3"/>
            <enum name="fitEnd" value="4"/>
            <enum name="center" value="5"/>
            <enum name="centerCrop" value="6"/>
            <enum name="centerInside" value="7"/>
        </attr>
        <attr name="kon_tint" format="color"/>
        <attr name="kon_tintMode">
            <enum name="src_over" value="3"/>
            <enum name="src_in" value="5"/>
            <enum name="src_atop" value="9"/>
            <enum name="multiply" value="14"/>
            <enum name="screen" value="15"/>
            <enum name="add" value="16"/>
        </attr>
        <attr name="kon_drawableAlpha" format="integer"/>
        <attr name="kon_cropToPadding" format="boolean"/>
    </declare-styleable>

</resources>
